<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkNight</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:colorBackground">@color/colorPrimaryDarkNight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SearchBar">
        <item name="android:backgroundTint">@color/colorSecondaryNight</item>
    </style>

    <style name="navDrawer">
        <item name="android:backgroundTint">@color/colorPrimaryDarkNight</item>
    </style>

    <style name="navHeader">
        <item name="android:backgroundTint">@color/colorPrimaryDarkNight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/colorPrimaryDarkNight</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="floatingBtn">
        <item name="android:backgroundTint">@color/colorSecondaryNight</item>
    </style>

    <style name="button1">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondaryNight</item>
    </style>

    <style name="button2">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="slider">
        <item name="haloColor">@color/colorSecondary</item>
        <item name="thumbColor">@color/white</item>
        <item name="trackColor">@color/colorSecondary</item>
    </style>

    <style name="splash">
        <item name="android:background">@color/colorPrimaryDarkNight</item>
    </style>

</resources>